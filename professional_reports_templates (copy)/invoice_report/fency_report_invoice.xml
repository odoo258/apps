<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="fency_report_invoice_document">


<t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>
            <div style="padding-top:50px"></div>
            <div class="header">

                <div class="row">
                    <div class="col-xs-4">
                        <!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                            style="max-height: 85px;" /> -->
                      <!--   <span t-field="company.logo" t-field-options='{"widget": "image"}'/> -->

                    </div>
                    <div class="col-xs-4">
                    </div>
                    <div class="col-xs-4" >
                        <h2 class="text-center" style="background-color: #613CFF; padding:10px; color: #fff"><b>INVOICE</b></h2>
                    </div>
                   
</div>
</div>
<t t-call="report.external_layout">
    <div class="page">
        <div class="col-xs-8 row" style="border-top: 1px solid #613CFF;"></div><div class="col-xs-4"></div>

<div class="row" >
    <div class="col-xs-8" >
        <div style="font:15px lucida-console,sans-serif !important;" >
                        <b><span t-field="company.partner_id" /></b><br/>
                        <span t-field="company.partner_id.street" /><br/>
                        <div t-if="company.partner_id.street2">
                        <span t-field="company.partner_id.street2" /><br/>
                    </div>
                        <span t-field="company.partner_id.city" /><br/>
                        <span t-field="company.partner_id.country_id" /><br/>
                        <b>Email:</b>
                        <span t-field="company.partner_id.email" /><br/>
                        <b>Phone:</b>
                        <span t-field="company.partner_id.phone" /><br/>
<span t-field="company.partner_id.vat" /><br/>
</div>
<div name="invoice_address">
<h5 style="color: #613CFF">Invoice To:</h5>
                    <address t-field="o.partner_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat"/>
                </span>
                <b>Email:</b>
                    <span t-field="o.partner_id.email"/>
                    
                </div>

    </div>
<div class="col-xs-4">
          <h4 class="text-center" style="background-color: #613CFF; padding:5px; color: #fff">
                <span  t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')"><font color="#fff">Invoice NO: </font></span>
                <span  t-if="o.type == 'out_invoice' and o.state == 'proforma2'"><font color="#fff">PRO-FORMA </font></span>
                <span   t-if="o.type == 'out_invoice' and o.state == 'draft'"><font color="#fff">Draft Invoice </font></span>
                <span   t-if="o.type == 'out_invoice' and o.state == 'cancel'"><font color="#fff">Cancelled Invoice </font></span>
                <span   t-if="o.type == 'out_refund'"><font color="#fff">Refund </font></span>
                <span   t-if="o.type == 'in_refund'"><font color="#fff">Vendor Refund </font></span>
                <span   t-if="o.type == 'in_invoice'"><font color="#fff">Vendor Bill </font></span>
                <font color="#fff"><b><span t-field="o.number"/></b></font>
            
            </h4>            
                   

            <div class="col-xs-12" style="background-color: #613CFF; padding:5px; color: #000000">

                <div t-if="o.date_invoice">

                <font color="#fff">
                <div class="col-xs-6">
                    <strong>Invoice Date:</strong>
                </div>
                <div class="col-xs-6">
                    <p t-field="o.date_invoice"/>
                </div></font>
                </div>
                <div t-if="o.origin">
                    <font color="#fff">
                    <div class="col-xs-6">  
                    <strong>SO:</strong></div>
                    <div class="col-xs-6">
                    <p t-field="o.origin"/></div></font>
                </div>
                <div t-if="o.date_invoice">

                <font color="#fff">
                <div class="col-xs-6">
                    <strong>Order Date:</strong>
                </div>
                <div class="col-xs-6">
                    <p t-field="o.date_invoice"/>
                </div></font>
                </div>
                <div t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                    <font color="#fff">
                    <div class="col-xs-6">
                    <strong>Due Date:</strong></div>
                    <div class="col-xs-6">
                    <p t-field="o.date_due"/></div></font>
                </div>
                
            </div>

    </div>
</div>
          
   <!-- <t t-call="report.external_layout"> -->
        <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
        <!-- <div class="page"> -->
<div class="row" style="border-top: 1px solid #613CFF; margin: 10px;"></div>
           
    <div class="row" style="padding-top:10px;">
       
            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

            <table class="table table-condensed table table-striped">
                <thead style="background-color: #613CFF" >
                    <tr style="color: #fff">
                        <th>Description</th>
                        <th class="hidden">Source Document</th>
                        <th class="text-right">Quantity</th>
                        <th class="text-right">Unit Price</th>
                        <th t-if="display_discount" class="text-right">Disc.(%)</th>
                        <th class="text-right">Taxes</th>
                        <th class="text-right">Tax Excluded Price</th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <tr t-foreach="o.invoice_line_ids" t-as="l">
                        <td><span t-field="l.name"/></td>
                        <td class="hidden"><span t-field="l.origin"/></td>
                        <td class="text-right">
                            <span t-field="l.quantity"/>
                            <span t-field="l.uom_id"  groups="product.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_unit"/>
                        </td>
                        <td t-if="display_discount" class="text-right">
                            <span t-field="l.discount"/>
                        </td>
                        <td class="text-right">
                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.invoice_line_tax_ids))"/>
                        </td>
                        <td class="text-right">
                            <span t-field="l.price_subtotal" 
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            
                    
                
        </div>

            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <t t-foreach="o._get_tax_amount_by_group()" t-as="amount_by_group">
                            <tr>
                                <td><span t-esc="amount_by_group[0]"/></td>
                                <td class="text-right">
                                    <span t-esc="amount_by_group[1]"/>
                                </td>
                            </tr>
                        </t>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
    <div style="border-top: 1px solid #613CFF; padding: 10px;"></div>
 
<div class="row">
               
                    <table class="table table-condensed">
                        <thead style="background-color: #613CFF">
                            <tr style="color: #fff">
                                <th>No</th>
                                <th class="text-right">Date</th>
                                <th class="text-right">Method</th>
                                <th class="text-right">Reference</th>
                                <th class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                             <tr t-foreach="o.payment_move_line_ids" t-as="t">
                                <td><span t-esc="t_index + 1"/></td>
                                <td class="text-right"><span t-field="t.date" t-options='{"widget": "date"}'/></td>
                                <td class="text-right"><span t-field="t.payment_id.journal_id.name" t-options='{"widget": "text"}'/></td>
                                <td class="text-right"><span t-field="t.move_id.name" t-options='{"widget": "text"}'/></td>
                                <td class="text-right"><span t-field="t.payment_id.amount" t-options='{"widget": "monetary"}'/></td>
                               
                            </tr>
                        </tbody>
                    </table>
               
            </div>            
           
            
        </div>
    </t> 

</template>

<template id="report_invoice" inherit_id="account.report_invoice">

   <xpath expr="//t[@t-call='account.report_invoice_document']" position="replace" >
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <!-- <t t-if="o.account_template == 'fency' "> -->
                <t t-call="professional_reports_templates.contemporary_report_invoice_document" t-lang="o.partner_id.lang"/>
            <!-- </t> -->
           <!--  <t t-if="o.company_id.account_template == 'classic'">
                <t t-call="bi_professional_reports_templates.classic_report_invoice_document" t-lang="o.partner_id.lang"/>
            </t>
            <t t-if="o.company_id.account_template == 'modern' ">
                <t t-call="bi_professional_reports_templates.modern_report_invoice_document" t-lang="o.partner_id.lang"/>
            </t>
            <t t-if="o.company_id.account_template == 'odoo_standard'">
                <t t-call="bi_professional_reports_templates.odoo_std_report_invoice_document" t-lang="o.partner_id.lang"/>
            </t> -->
        </t>
    </t>
  </xpath>
</template>

</data>
</odoo>
